<%- include('parts/header.ejs') %>
<body>
       <div class="container">
         
        <h1 class="p-5 mb-4 text-center">WELCOME </h1>
       <% if (users.length === 0) { %>
        <h3> we dont have any users ....</h3>
       <% } else { %>
            <table class="table table-hover text-center" >
                <thead class="table-dark">
                    <tr>
                        <th>id</th>
                        <th>First Name</th>
                        <th>Last name</th>
                        <th>Username</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach( user=> { %>
                     <tr>
                        <td><%= user.id  %></td> 
                        <td><%= user.firstname  %></td> 
                        <td><%= user.lastname  %></td> 
                        <td><%= user.username  %></td> 
                        <td><%= user.isAdmin?"Admin":"not Admin" %></td> 
                        <td><div class="">
                            <button class="btn btn-success mb-2">update</button>
                            <button class="btn btn-danger mb-2" data-doc="<%= user.id %>">delete</button>
                        </div></td> 
                     </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        <a class="btn btn-secondary" href="/api/users/create">create User</a>
       </div>

    <%- include('parts/footer.ejs') %>
<script src="/app.js"></script>
<script src="/bootstrap.bundle.min.js"></script>

</body>

</html>
